<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotPasswordActivity"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:src="@drawable/logo_main"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async Devs"
        android:textSize="22sp"
        android:textColor="@color/text_color"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email Id registered with us.."
        android:textSize="16sp"
        android:textColor="@color/text_color"/>

    <EditText
        android:id="@+id/etEmailReset"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/et_background"
        android:hint="Email ID"
        android:paddingLeft="15dp"
        android:textColor="@color/text_color"
        android:paddingRight="15dp"
        android:textSize="18dp"
        android:singleLine="true"
        android:textColorHint="@color/hint_color"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReset"
        android:layout_width="308dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textColor="@color/text_color_Btn"
        android:layout_gravity="center"
        android:text="Reset"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        app:backgroundTint="@color/btn_color"
        android:fontFamily="@font/cantora_one"
        android:textSize="18dp"
        app:cornerRadius="12dp"
        app:rippleColor="@color/hint_color"
        />



    <TextView
        android:id="@+id/tvResultResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email has been sent to reset your password\n Now return to Login"
        android:textColor="#24208E"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/tvreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Login"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/text_color"
        android:layout_marginTop="5dp"
        app:rippleColor="@color/hint_color"
        android:backgroundTint="@null"/>



</LinearLayout>